<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>$(Product).Compiler</AssemblyName>
    <GenerateDocumentationFile Condition="'$(Configuration)' != 'DEBUG'">false</GenerateDocumentationFile>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <!-- Source files -->
  <ItemGroup>
    <Compile Include="Grammar\Numeric.fs" />
    <Compile Include="Grammar\Names.fs" />
    <Compile Include="Grammar\Flags.fs" />
    <Compile Include="Grammar\Content.fs" />
    <Compile Include="Grammar\Symbol.fs" />
    <Compile Include="Grammar\ResolvedSymbol.fs" />
    <Compile Include="Grammar\SymbolTable.fs" />
    <Compile Include="Grammar\ParserState.fs" />
    <Compile Include="Grammar\Definition.fs" />
    <Compile Include="Grammar\Parser.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <!-- References -->
  <ItemGroup>
    <PackageReference Include="FParsec" Version="1.1.1" />
  </ItemGroup>

</Project>
